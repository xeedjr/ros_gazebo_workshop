<?xml version="1.0" ?>
<robot name="diff_drive">

  <ros2_control name="IgnitionSystem" type="system">
    <hardware>
      <plugin>harware_link2/HardwareLinkInterface</plugin>
      <!-- <plugin>ign_ros2_control/IgnitionSystem</plugin> -->
    </hardware>
    <joint name="left_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-1</param>
        <param name="max">1</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="right_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-1</param>
        <param name="max">1</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>

  <gazebo>
    <plugin filename="ign_ros2_control-system" name="ign_ros2_control::IgnitionROS2ControlPlugin">
      <parameters>/root/data/project_ws/src/ros_gz_example_bringup/config/diff_drive_controller_velocity.yaml</parameters>
    </plugin>
  </gazebo>

  <link name="base_link">
  </link>

  <link name="chassis">
    <origin rpy="0 0 0" xyz="0 0 0.15"/>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.009375" ixy="0" ixz="0" iyy="0.015" iyz="0" izz="0.009375"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.3 0.3 0.15"/>
      </geometry>
      <gazebo>
        <material>
          <ambient>0.5 0.5 1.0 1</ambient>
          <diffuse>0.5 0.5 1.0 1</diffuse>
          <specular>0.0 0.0 1.0 1</specular>
        </material>
      </gazebo>
    </visual>
    <collision name='collision_chassis'>
      <geometry>
        <box size="0.3 0.3 0.15"/>
      </geometry>
    </collision>       
  </link>

  <joint name="base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
    <origin rpy="0 0 0" xyz="0 0 0.15"/>
  </joint>

  <link name="left_wheel">
    <origin rpy="-1.5707 0 0" xyz="0.05 0.15 0.10"/>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.0012" ixy="0" ixz="0" iyy="0.0012" iyz="0" izz="0.0012"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.03" radius="0.05"/>
      </geometry>
      <gazebo>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
          <specular>0.2 0.2 0.2 1</specular>
        </material>
      </gazebo>
    </visual>
    <collision name='collision_left_wheel'>
      <geometry>
        <cylinder length="0.03" radius="0.05"/>
      </geometry>   
    </collision> 
    <gazebo reference="left_wheel">
      <surface>
        <friction>
          <ode>
            <mu>1.0</mu>
            <mu2>1.0</mu2>
          </ode>
        </friction>
      </surface>
    </gazebo>       
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <axis xyz="0 0 1"/>
    <origin rpy="-1.5707 0 0" xyz="0.05 0.15 0.10"/>
  </joint>

  <link name="right_wheel">
    <origin rpy="-1.5707 0 0" xyz="0.05 -0.15 0.10"/>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.0012" ixy="0" ixz="0" iyy="0.0012" iyz="0" izz="0.0012"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.03" radius="0.05"/>
      </geometry>
      <gazebo>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
          <specular>0.2 0.2 0.2 1</specular>
        </material>
      </gazebo>
    </visual>
    <collision name='collision_right_wheel'>
      <geometry>
        <cylinder length="0.03" radius="0.05"/>
      </geometry>
    </collision>   
    <gazebo reference="right_wheel">
      <surface>
        <friction>
          <ode>
            <mu>1.0</mu>
            <mu2>1.0</mu2>
          </ode>
        </friction>
      </surface>
    </gazebo>    
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <axis xyz="0 0 1"/>
    <origin rpy="-1.5707 0 0" xyz="0.05 -0.15 0.10"/>
  </joint>

  <link name="caster">
    <origin rpy="0 0 0" xyz="-0.15 0 0.10"/>
    <inertial>
      <mass value="0.005"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
    <visual>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <gazebo>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
          <specular>0.2 0.2 0.2 1</specular>
        </material>
      </gazebo>
    </visual>
    <collision name='collision_caster'>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </collision>    
    <gazebo reference="caster">
      <surface>
        <friction>
          <ode>
            <mu>0.0</mu>
            <mu2>0.0</mu2>
          </ode>
        </friction>
      </surface>
    </gazebo>  
  </link>

  <joint name="caster_wheel" type="fixed">
    <parent link="base_link"/>
    <child link="caster"/>
    <origin rpy="0 0 0" xyz="-0.15 0 0.10"/>
  </joint>





  <link name="camera_link">
    <origin rpy="0 0 0" xyz="0.15 0 0.2"/>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.000166667" iyy="0.000166667" izz="0.000166667" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <gazebo>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
          <specular>0 0 0 1</specular>
        </material>
      </gazebo>
    </visual>
    <collision name="collision">
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>     
  </link>


  <gazebo reference="camera_link">
        <sensor name="camera" type="camera">
          <camera>
            <horizontal_fov>1.047</horizontal_fov>
            <image>
              <width>320</width>
              <height>240</height>
            </image>
            <clip>
              <near>0.1</near>
              <far>100</far>
            </clip>
          </camera>
          <always_on>1</always_on>
          <update_rate>30</update_rate>
          <visualize>true</visualize>
          <topic>camera</topic>
        </sensor>
  </gazebo>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin rpy="0 0 0" xyz="0.15 0 0.2"/>    
  </joint>

  <link name="lidar_link">
    <origin rpy="0 0 0" xyz="0 0 0.25"/>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.000166667" iyy="0.000166667" izz="0.000166667" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </visual>
    <collision name="collision">
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>    
  </link>

  <gazebo reference="lidar_link">
        <sensor name='gpu_lidar' type='gpu_lidar'>
          <pose>0 0 0 0 0 0</pose>
          <topic>scan</topic>
          <ignition_frame_id>lidar_link</ignition_frame_id>
          <update_rate>10</update_rate>
          <lidar>
            <scan>
              <horizontal>
                <samples>800</samples>
                <resolution>1</resolution>
                <min_angle>-3.1415926536</min_angle>
                <max_angle>+3.1415926536</max_angle>
              </horizontal>
              <vertical>
                <samples>1</samples>
                <resolution>1</resolution>
                <min_angle>0.0</min_angle>
                <max_angle>0.0</max_angle>
              </vertical>
            </scan>
            <range>
              <min>0.08</min>
              <max>12.0</max>
              <resolution>0.01</resolution>
            </range>
            <noise>
              <type>gaussian</type>
              <mean>0.0</mean>
              <stddev>0.01</stddev>
            </noise>
          </lidar>
          <visualize>true</visualize>
        </sensor>
  </gazebo>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin rpy="0 0 0" xyz="0 0 0.25"/>    
  </joint>
 



  
</robot>