<?xml version="1.0" ?>
<robot name="diff_drive">
  <link name="base_link">
  
  </link>

  <joint name="base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
  </joint>

  <link name="chassis">
    <origin rpy="0 0 0" xyz="0 0 0.15"/>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.009375" ixy="0" ixz="0" iyy="0.015" iyz="0" izz="0.009375"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.3 0.3 0.15"/>
      </geometry>
      <gazebo>
        <material>
          <ambient>0.5 0.5 1.0 1</ambient>
          <diffuse>0.5 0.5 1.0 1</diffuse>
          <specular>0.0 0.0 1.0 1</specular>
        </material>
      </gazebo>
    </visual>
    <collision name='collision_chassis'>
      <geometry>
        <box size="0.3 0.3 0.15"/>
      </geometry>
    </collision>    
  </link>

  <link name="left_wheel">
    <origin rpy="-1.5707 0 0" xyz="0.15 0.15 0.10"/>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.0012" ixy="0" ixz="0" iyy="0.0012" iyz="0" izz="0.0012"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.03" radius="0.05"/>
      </geometry>
      <gazebo>      
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
          <specular>0.2 0.2 0.2 1</specular>
        </material>
      </gazebo>
    </visual>
    <collision name='collision_left_wheel'>
      <geometry>
        <cylinder length="0.03" radius="0.05"/>
      </geometry>
    </collision>    
  </link>

  <link name="right_wheel">
    <origin rpy="-1.5707 0 0" xyz="0.15 -0.15 0.10"/>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.0012" ixy="0" ixz="0" iyy="0.0012" iyz="0" izz="0.0012"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.03" radius="0.05"/>
      </geometry>
      <gazebo>      
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
          <specular>0.2 0.2 0.2 1</specular>
        </material>
      </gazebo>
    </visual>
    <collision name='collision_right_wheel'>
      <geometry>
        <cylinder length="0.03" radius="0.05"/>
      </geometry>
    </collision>    
  </link>

  <link name="caster">
    <origin rpy="0 0 0" xyz="-0.15 0 0.10"/>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <gazebo>      
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
          <specular>0.2 0.2 0.2 1</specular>
        </material>
      </gazebo>        
    </visual>
    <collision name='collision_caster'>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </collision>    
  </link>

  <link name="camera_link">
    <origin rpy="0 0 0" xyz="0.15 0 0.2"/>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.000166667" ixy="0" ixz="0" iyy="0.000166667" iyz="0" izz="0.000166667"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <gazebo>      
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
          <specular>0 0 0 1</specular>
        </material>
      </gazebo>        
    </visual>
    <collision name="collision">
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>    
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="chassis"/>
    <child link="camera_link"/>
  </joint>

  <link name="lidar_link">
    <origin rpy="0 0 0" xyz="0 0 0.25"/>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.000166667" ixy="0" ixz="0" iyy="0.000166667" iyz="0" izz="0.000166667"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </visual>
    <collision name="collision">
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>    
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="chassis"/>
    <child link="lidar_link"/>
  </joint>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="chassis"/>
    <child link="left_wheel"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 1"/>
  </joint>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="chassis"/>
    <child link="right_wheel"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 1"/>
  </joint>

  <joint name="caster_wheel" type="fixed">
    <parent link="chassis"/>
    <child link="caster"/>
  </joint>
</robot>