<?xml version="1.0"?>
<robot name="diff_drive" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:property name="is_sim" value="$(arg sim_mode)" />

  <ros2_control name="IgnitionSystem" type="system">
    <xacro:if value="${is_sim==True}">
      <hardware>
        <plugin>gz_ros2_control/GazeboSimSystem</plugin>
      </hardware>
    </xacro:if>        
    <xacro:if value="${is_sim==False}">
      <hardware>
        <plugin>hardware_link2/HardwareLinkInterface</plugin>
        <param name="device">/dev/serial/by-id/usb-1a86_USB_Serial-if00-port0</param>
        <param name="baud_rate">115200</param>
        <param name="timeout_ms">1000</param>        
      </hardware>
    </xacro:if>

    <joint name="left_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-1</param>
        <param name="max">1</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="right_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-1</param>
        <param name="max">1</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>




  <gazebo>
    <plugin filename="gz_ros2_control-system" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
      <parameters>/root/data/project_ws/src/ros_gz_example_bringup/config/diff_drive_controller_velocity.yaml</parameters>
    </plugin>
    <plugin
      filename="gz-sim-imu-system"
      name="gz::sim::systems::Imu">
    </plugin>
    <plugin
      filename="gz-sim-magnetometer-system"
      name="gz::sim::systems::Magnetometer">
    </plugin>
  </gazebo>

  <link name="base_link">
  </link>

  <link name="chassis_link">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.009375" ixy="0" ixz="0" iyy="0.015" iyz="0" izz="0.009375"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.2 0.2 0.15"/>
      </geometry>
      <gazebo>
        <material>
          <ambient>0.5 0.5 1.0 1</ambient>
          <diffuse>0.5 0.5 1.0 1</diffuse>
          <specular>0.0 0.0 1.0 1</specular>
        </material>
      </gazebo>
    </visual>
    <collision name='collision_chassis'>
      <geometry>
        <box size="0.2 0.2 0.15"/>
      </geometry>
    </collision>       
  </link>

  <joint name="base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis_link"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>

  <link name="left_wheel">
    <origin rpy="-1.5707 0 0" xyz="0.05 0.11 -0.05"/>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.0012" ixy="0" ixz="0" iyy="0.0012" iyz="0" izz="0.0012"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.03" radius="0.034"/>
      </geometry>
      <gazebo>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
          <specular>0.2 0.2 0.2 1</specular>
        </material>
      </gazebo>
    </visual>
    <collision name='collision_left_wheel'>
      <geometry>
        <cylinder length="0.02677" radius="0.033685"/>
      </geometry>   
    </collision> 
    <gazebo reference="left_wheel">
      <surface>
        <friction>
          <ode>
            <mu>0.8</mu>
            <mu2>0.9</mu2>
            <slip1>0.3</slip1>  <!-- Longitudinal slip -->
            <slip2>0.1</slip2>  <!-- Lateral slip -->
          </ode>
        </friction>
      </surface>
    </gazebo>       
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <axis xyz="0 0 1"/>
    <origin rpy="-1.5707 0 0" xyz="0.05 0.11 -0.05"/>
    <dynamics damping="0.2"/>
  </joint>

  <link name="right_wheel">
    <origin rpy="-1.5707 0 0" xyz="0.05 -0.11 -0.05"/>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.0012" ixy="0" ixz="0" iyy="0.0012" iyz="0" izz="0.0012"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.03" radius="0.034"/>
      </geometry>
      <gazebo>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
          <specular>0.2 0.2 0.2 1</specular>
        </material>
      </gazebo>
    </visual>
    <collision name='collision_right_wheel'>
      <geometry>
        <cylinder length="0.02677" radius="0.033685"/>
      </geometry>
    </collision>   
    <gazebo reference="right_wheel">
      <surface>
        <friction>
          <ode>
            <mu>0.8</mu>
            <mu2>0.9</mu2>
            <slip1>0.35</slip1>  <!-- Longitudinal slip -->
            <slip2>0.1</slip2>  <!-- Lateral slip -->
          </ode>
        </friction>
      </surface>
    </gazebo>    
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <axis xyz="0 0 1"/>
    <origin rpy="-1.5707 0 0" xyz="0.05 -0.11 -0.05"/>
    <dynamics damping="0.2"/>
  </joint>

  <link name="caster">
    <origin rpy="0 0 0" xyz="-0.10 0 -0.05"/>
    <inertial>
      <mass value="0.005"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
    <visual>
      <geometry>
        <sphere radius="0.034"/>
      </geometry>
      <gazebo>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
          <specular>0.2 0.2 0.2 1</specular>
        </material>
      </gazebo>
    </visual>
    <collision name='collision_caster'>
      <geometry>
        <sphere radius="0.034"/>
      </geometry>
    </collision>    
    <gazebo reference="caster">
      <surface>
        <friction>
          <ode>
            <mu>0.0</mu>
            <mu2>0.0</mu2>
          </ode>
        </friction>
      </surface>
    </gazebo>  
  </link>

  <joint name="caster_wheel" type="fixed">
    <parent link="base_link"/>
    <child link="caster"/>
    <origin rpy="0 0 0" xyz="-0.10 0 -0.05"/>
  </joint>





  <link name="camera_link">
    <origin rpy="0 0 0" xyz="0.10 0 0.05"/>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.000166667" iyy="0.000166667" izz="0.000166667" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <gazebo>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
          <specular>0 0 0 1</specular>
        </material>
      </gazebo>
    </visual>
    <collision name="collision">
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>     
  </link>


  <gazebo reference="camera_link">
        <sensor name="wide_angle_camera" type="wideanglecamera">
          <camera>
            <horizontal_fov>2</horizontal_fov>
            <image>
              <width>1280</width>
              <height>720</height>
            </image>
            <clip>
              <near>0.1</near>
              <far>100</far>
            </clip>
            <lens>
              <type>custom</type>
              <custom_function>
                <c1>1</c1>
                <c2>2</c2>
                <f>3.2</f>
                <fun>tan</fun>
              </custom_function>
              <scale_to_hfov>true</scale_to_hfov>
              <cutoff_angle>2</cutoff_angle>
              <env_texture_size>512</env_texture_size>
            </lens>
          </camera>
          <always_on>1</always_on>
          <update_rate>10</update_rate>
          <visualize>1</visualize>
          <topic>camera</topic>
        </sensor>
  </gazebo>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin rpy="0 0 0" xyz="0.10 0 0.05"/>    
  </joint>

  <link name="lidar_link">
    <origin rpy="0 0 3.14" xyz="0 0 0.1"/>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.000166667" iyy="0.000166667" izz="0.000166667" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </visual>
    <collision name="collision">
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>    
  </link>

  <gazebo reference="lidar_link">
        <sensor name='gpu_lidar' type='gpu_lidar'>
          <pose>0 0 0 0 0 0</pose>
          <topic>scan</topic>
          <gz_frame_id>lidar_link</gz_frame_id>
          <update_rate>10</update_rate>
          <lidar>
            <scan>
              <horizontal>
                <samples>800</samples>
                <resolution>1</resolution>
                <min_angle>-3.1415926536</min_angle>
                <max_angle>+3.1415926536</max_angle>
              </horizontal>
              <vertical>
                <samples>1</samples>
                <resolution>1</resolution>
                <min_angle>0.0</min_angle>
                <max_angle>0.0</max_angle>
              </vertical>
            </scan>
            <range>
              <min>0.08</min>
              <max>12.0</max>
              <resolution>0.01</resolution>
            </range>
            <noise>
              <type>gaussian</type>
              <mean>0.0</mean>
              <stddev>0.01</stddev>
            </noise>
          </lidar>
          <visualize>true</visualize>
        </sensor>
  </gazebo>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin rpy="0 0 3.14" xyz="0 0 0.1"/>    
  </joint>
 
  <link name="imu_link">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <inertial>
      <mass value="0.001"/>
      <inertia ixx="1.67e-10" iyy="1.67e-10" izz="1.67e-10" ixy="0" ixz="0" iyz="0"/>    </inertial>
    <visual>
      <geometry>
        <box size="0.001 0.001 0.001"/>
      </geometry>
    </visual>
    <collision name="collision">
      <geometry>
        <box size="0.001 0.001 0.001"/>
      </geometry>
    </collision>    
  </link>

  <gazebo reference="imu_link">
    <sensor name="imu_sensor" type="imu">
      <always_on>1</always_on>
      <update_rate>100</update_rate>
      <visualize>true</visualize>
      <topic>imu</topic>
      <enable_metrics>true</enable_metrics>
      <gz_frame_id>imu_link</gz_frame_id>
    </sensor>
  </gazebo>


  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>    
  </joint>

  <link name="magnetometer_link">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <inertial>
      <mass value="0.001"/>
      <inertia ixx="1.67e-10" iyy="1.67e-10" izz="1.67e-10" ixy="0" ixz="0" iyz="0"/>    </inertial>
    <visual>
      <geometry>
        <box size="0.001 0.001 0.001"/>
      </geometry>
    </visual>
    <collision name="collision">
      <geometry>
        <box size="0.001 0.001 0.001"/>
      </geometry>
    </collision>    
  </link>

  <gazebo reference="magnetometer_link">
    <sensor name="magnetometer" type="magnetometer">
      <always_on>1</always_on>
      <update_rate>100</update_rate>
      <visualize>true</visualize>
      <topic>magnetometer</topic>
      <gz_frame_id>magnetometer_link</gz_frame_id>
      <enable_metrics>true</enable_metrics>
      <!-- <magnetometer>
        <x>
          <noise type="gaussian">
            <mean>0.0</mean>
            <stddev>0.1</stddev>
          </noise>
        </x>
        <y>
          <noise type="gaussian">
            <mean>0.0</mean>
            <stddev>0.1</stddev>
          </noise>
        </y>
        <z>
          <noise type="gaussian">
            <mean>0.0</mean>
            <stddev>0.1</stddev>
          </noise>
        </z>
      </magnetometer> -->
    </sensor>
  </gazebo>


  <joint name="magnetometer_joint" type="fixed">
    <parent link="base_link"/>
    <child link="magnetometer_link"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>    
  </joint>
  
</robot>